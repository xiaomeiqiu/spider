<script type="text/javascript">

var uid="",
    mid="1166139675",
    articleId = "54581",
    displayname = "",
    userImage = "";

var image = new Image(1, 1);
image.src = '/static/images/b.gif?articleId=' + articleId;

   baidu.dom.ready(function(){

    var __up = baidu.g('up_article') , __down = baidu.g('down_article'), __up_num = baidu.g('up_btn_num') , __down_num = baidu.g('down_btn_num'),up_down_flag = false;

    function num2str(str){
        var num = (str*1) + 1 ;
        return num ;
    }
    function upvsdown(action){
        var url = "nid=533097058896448692&type="+action;
        baidu.ajax.post("/ajax/newssupport",url,function(h,r){
            var req = baidu.json.parse(r);
            if(req.errno == 0 ){
                if(action == "up"){
                    __up_num.innerHTML = num2str(__up_num.innerHTML);
                }else{
                    __down_num.innerHTML = num2str(__down_num.innerHTML);
                }
                up_down_flag = true ;
                if(action == "up"){
                    baidu.dom.removeClass('up_icon','up_gray');
                    baidu.dom.addClass('up_icon','up');
                }else{
                    baidu.dom.removeClass('down_icon','down_gray');
                    baidu.dom.addClass('down_icon','down');
                }
                /*baidu.dom.addClass("up_article","up_down_btn_gray");
                baidu.dom.addClass("down_article","up_down_btn_gray");
                baidu.dom.addClass("up_btn_num","up_down_btn_num_gray");
                baidu.dom.addClass("down_btn_num","up_down_btn_num_gray");
                baidu.dom.removeClass("up_txt","up_down_txt_hover");
                baidu.dom.removeClass("down_txt","up_down_txt_hover");*/
            }
        });
    }
    __up&&baidu.event.on(__up,'click',function(e){
        if(up_down_flag){return false;}
        upvsdown("up");
    });
    __down&&baidu.event.on(__down,'click',function(e){
        if(up_down_flag){return false;}
        upvsdown("down");
    });

    $('.authorRssBtn').click(function(e){
        if(!$("#login").is(":hidden")){
            baidu.g("login").click();
            return false;
        }
        var $e = $(this),
            txt = $e.find('.b').text(),
            changeTxt,changeClass,status;
        if(txt == '已关注'){
            status = 2;
            changeTxt = '关注';
            changeClass = 'i iadd';
        }else if(txt == '关注'){
            status = 1;
            changeTxt = '已关注';
            changeClass = 'i iminus';
        }
        if(serverData.token){
            var url = "/ajax/subscribe?uid="+uid+"&mid="+mid+"&type=1&status="+status+"&token=" + serverData.token + "&time=" + serverData.tokentm;
        }else{
            var url = "/ajax/subscribe?uid="+uid+"&mid="+mid+"&type=1&status="+status;
        }
        $.ajaxSetup({ cache: false });
        $.ajax({
            url: url,
            type: 'GET',
            dataType: 'json',
            success: function(res){
                if(res.errno == '0'){
                    $e.find('.b').text(changeTxt);
                    $e.find('.i').removeClass().addClass(changeClass);
                }
            }
        });

    });

    $.each($('.videoArea'),function(i,e){
        var $e = $(e),
            id = $e.attr('id'),
            name = 'video' + i,
            width = $e.data('width'),
            height = $e.data('height'),
            url = $e.data('url'),
            flashvars={
                f:url,
                c:0,
                b:1,
                p:0
            };

        CKobject.embedSWF('/static/js/ckplayer/ckplayer.swf',id,name,width,height,flashvars,'');
    });

    new Comment('mod-comment', {
        url: encodeURIComponent(window.location.href),
        articleId: '54581',
        displayname: '',
        subscribename: 'baijia',
        userImage: ''
    });

});


</script>

