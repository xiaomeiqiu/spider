<script type="text/javascript">
baidu.dom.ready(function(){

    //点击查看更多文章
    function renderItem(item ,writerList , action,point){
        var _html = [] ,summary ,authorinfo,pointer ;  
        if(item.m_artical_summary.length > 62){
            summary = item.m_artical_summary.substr(0,59)+"..." ;
        }else{
            summary = item.m_artical_summary ; 
        }
        if(item.m_writer_id == 0 ){
            authorinfo = '<span class="article_time">'+item.m_create_time_format+'</span><a class="article_more" href="'+item.m_artical_url+'" target="_blank" >阅读全文>></a>';
        }else if(action == "support"){
            authorinfo = '<a href="'+writerList[item.m_writer_id].writer_url+'" class="article_author" target="_blank"  mon="name=bjzm_support">'+writerList[item.m_writer_id].writer_name+'</a><span class="article_time">'+item.m_create_time_format+'</span><a class="article_more" href="'+item.m_artical_url+'" target="_blank" >阅读全文>></a>' ;
        }else if(action == "oppose"){
            authorinfo = '<a href="'+writerList[item.m_writer_id].writer_url+'" class="article_author" target="_blank"  mon="name=bjzm_oppose">'+writerList[item.m_writer_id].writer_name+'</a><span class="article_time">'+item.m_create_time_format+'</span><a class="article_more" href="'+item.m_artical_url+'" target="_blank" >阅读全文>></a>' ;
        }
        if(action == "support"){
            if(!point){
                pointer = '<div class="point_box"><div class="support_article"></div></div>';
            }else{
                pointer = "";
            }
            _html.push('<li>',
                '<h3 class="article_head">',
                    '<a href="'+item.m_artical_url+'" class="article_title" target="_blank"    mon="name=bjzm_support">'+item.m_artical_title+'</a>',
                '</h3>',
                '<a href="'+item.m_artical_url+'" target="_blank" class="pic" mon="name=bjzm_support"><img src="'+item.m_artical_image_url+'" class="frontcover"></a>',
                    '<div class="article_content">',
                        '<p class="article_body">'+summary+'</p>',
                        authorinfo,
                    '</div>',
                    pointer,
                '</li>');
        }else{
            if(point){
                pointer = '<div class="point_box"><div class="oppose_article"></div></div>';
            }else{
                pointer = "";
            }
            _html.push('<li>',
                    '<h3 class="article_head">',
                        '<a href="'+item.m_artical_url+'" class="article_title" target="_blank"    mon="name=bjzm_oppose">'+item.m_artical_title+'</a>',
                    '</h3>',
                    '<a href="'+item.m_artical_url+'" target="_blank" class="pic" mon="name=bjzm_oppose"><img src="'+item.m_artical_image_url+'" class="frontcover"></a>',
                    '<div class="article_content">',
                        '<p class="article_body">'+summary+'</p>',
                        authorinfo,
                    '</div>',
                    pointer,
                '</li>');
        }
        return _html.join("");
    }

    var __more = baidu.g("more_article");
    var __article1 = baidu.g("article1");
    var __article2 = baidu.g("article2");
    var __moreId = 2 ; 
    var displayname = '';
    var userinfoimage = '' || 'http://himg.bdimg.com/sys/portrait/item/982f4a616d65736a697869616f6875694206';
    function setStyle(action){
        var style = (action == 1) ? "1px dotted #aaa" : "none" ; 
        var list1 = baidu.dom.query("#article1 li") ; 
        var list2 = baidu.dom.query("#article2 li") ;
        var target1 = list1[list1.length-1];
        var target2 = list2[list2.length-1];
        baidu.dom.setStyle(target1,"border-bottom",style);
        baidu.dom.setStyle(target2,"border-bottom",style);
    }
    __more && baidu.event.on(__more,'click',function(e){
        baidu.ajax.get("/ajax/topicarticlelist?topicid=x16a5clp&pagesize=4&page="+__moreId,function(h,r){
            var req = baidu.json.parse(r);
            var html1 = "" , html2 = "" ,point = false;
            if(req.errno == 0){
                if(req.data[2].list.length > req.data[1].list.length){
                    point = true ; 
                }
                for(var i = 0 ;i < req.data[1].list.length ;i++ ){
                    html1 += renderItem(req.data[1].list[i] ,req.writerList,"support",point);
                }
                for(var j = 0 ; j < req.data[2].list.length ;j++){
                    html2 += renderItem(req.data[2].list[j],req.writerList,"oppose",point);
                }
                setStyle(1)
                baidu.dom.insertHTML(__article1,'beforeEnd',html1);
                baidu.dom.insertHTML(__article2,'beforeEnd',html2);
                setStyle(0);
                __moreId++ ; 
                if(__moreId * 4 > req.data[1].total && __moreId * 4 > req.data[2].total){
                    baidu.setStyle(__more,"display","none");
                }
            }else{
                
            }
        });
    });
    //支持或反对
    var voteflag = 1;
    window.votedOppose = null , window.votedSupport = null ; 
    var counter1 = 530||0 , counter2 = 671 ||0; 
    function showSupportOrOppose(action,voteflag){
        var url = "",supportTxt = "",opposeTxt = "";
        if(voteflag){
            supportTxt = "<div class='voted_tip'></div><span class='vote_tip_txt'>您已经投过票了！</span>";
            opposeTxt = "<div class='voted_tip'></div><span class='vote_tip_txt'>您已经投过票了！</span>";
        }else{
            supportTxt = "<div class='vote_tip'></div><span class='vote_tip_txt'>成功支持了红方观点</span>";
            opposeTxt = "<div class='vote_tip'></div><span class='vote_tip_txt'>成功支持了蓝方观点</span>";
        }
        if(action == "support"){
            url = "http://widget.weibo.com/distribution/comments.php?width=0&border=0&fontsize=14&appkey=1187116565&url="+encodeURIComponent(fixUrl(location.href)+"&opinion=support") ;
                        if(!votedSupport){
                votedSupport =  ZMT.notice({content:'<div class="pk_dia_title" id="pk_dia_support_title">'+supportTxt+'</div><div class="pk_dia_txt" >发表你的观点给“<span class="pk_dia_opinion">迎来“第二春”</span></div><div class="mod-comment" id="support-mw-comment"><div class="comment-box"><div class="opt"><p class="nm"><a href="http://i.baidu.com/" target="_blank">'+ displayname +'</a><em>|</em><a href="javascript:;" class="logout">退出</a></p></div><div class="cmtbox"><p class="avt"><img src="'+ userinfoimage +'"></p><i class="tarea"><textarea placeholder="随便说点什么吧"></textarea></i></div><p class="btns3"><span class="checknum">还可以输入<em>250</em>个字</span><a href="javascript:;" class="btn btndis cmtbtn">评论</a></p></div><div class="comment-success"></div><div class="comment-fail"></div></div>',height:305,width:450});
                setTimeout(function(){
                    //baidu.g("WBCommentFrame3").src = url ;
                    if(!(baidu.browser.ie&&baidu.browser.ie < 7)){
                        votedSupport.setPosition({top:(baidu.page.getViewHeight()/2-150)});
                    }
                },200);
                new Comment('support-mw-comment', {
                    url: encodeURIComponent(fixUrl(window.location.href) + '&opinion=support'),
                    articleId: 'x16a5clp',
                    displayname: '',
                    subscribename: 'baijia',
                    userImage: '',
                    opinion : 'support',
                    nocmtlist : true,
                    cmtToRootId : 'support-comment'
                });
            }else{
                baidu.g("pk_dia_support_title").innerHTML = "<div class='voted_tip'></div><span class='vote_tip_txt'>您已经投过票了！</span>";
                votedSupport.show();
            }
        }else{
            url = "http://widget.weibo.com/distribution/comments.php?width=0&border=0&fontsize=14&appkey=1187116565&url="+encodeURIComponent(fixUrl(location.href)+"&opinion=oppose") ;
                                    if(!votedOppose){
                votedOppose =  ZMT.notice({content:'<div class="pk_dia_title" id="pk_dia_oppose_title">'+opposeTxt+'</div><div class="pk_dia_txt" >发表你的观点给“<span class="pk_dia_opinion">难有实质推动</span>”</div><div class="mod-comment" id="oppose-mw-comment"><div class="comment-box"><div class="opt"><p class="nm"><a href="http://i.baidu.com/" target="_blank">'+ displayname +'</a><em>|</em><a href="javascript:;" class="logout">退出</a></p></div><div class="cmtbox"><p class="avt"><img src="'+ userinfoimage +'"></p><i class="tarea"><textarea placeholder="随便说点什么吧"></textarea></i></div><p class="btns3"><span class="checknum">还可以输入<em>250</em>个字</span><a href="javascript:;" class="btn btndis cmtbtn">评论</a></p></div><div class="comment-success"></div><div class="comment-fail"></div></div>',height:305,width:450});
                setTimeout(function(){
                    //baidu.g("WBCommentFrame4").src = url ;
                    if(!(baidu.browser.ie&&baidu.browser.ie < 7)){
                        votedOppose.setPosition({top:(baidu.page.getViewHeight()/2-150)});
                    }
                },200);
                new Comment('oppose-mw-comment', {
                    url: encodeURIComponent(fixUrl(window.location.href) + '&opinion=oppose'),
                    articleId: 'x16a5clp',
                    displayname: '',
                    subscribename: 'baijia',
                    userImage: '',
                    opinion : 'oppose',
                    nocmtlist : true,
                    cmtToRootId : 'oppose-comment'
                });
            }else{
                baidu.g("pk_dia_oppose_title").innerHTML = "<div class='voted_tip'></div><span class='vote_tip_txt'>您已经投过票了！</span>";
                votedOppose.show();
            }
        }
        

    }
    function supportOroppose(action){
        if(!displayname){
            instance.show();
            return;
        }
        
        if(voteflag){
            showSupportOrOppose(action,voteflag);
            return ; 
        }
        
        baidu.ajax.get("/ajax/topicstandpoint?type=topic&topicid=x16a5clp&action="+action,function(h,r)
        {
            var req = baidu.json.parse(r);
            if(req.errno == 0 && req.data == true){
                if(action == "support"){
                    baidu.dom.query(".opinion_vote_support_num")[0].innerHTML= (counter1+1);
                }
                if(action == "oppose"){
                    baidu.dom.query(".opinion_vote_oppose_num")[0].innerHTML= (counter2+1);
                }
                showSupportOrOppose(action,voteflag);
                voteflag =true ;
            }else{
                ZMT.notice({content:"投票失败！",autohide:true});
            }
        });
    }
    var __support = baidu.g("pk_for_txt");
    var __oppose = baidu.g("pk_against_txt");
    __support && baidu.event.on(__support,'click',function(e){
        supportOroppose("support");
    });
    __oppose && baidu.event.on(__oppose,'click',function(e){
        supportOroppose("oppose");
    });

    new Comment('support-comment', {
        url: encodeURIComponent(fixUrl(window.location.href) + '&opinion=support'),
        articleId: 'x16a5clp',
        displayname: '',
        subscribename: 'baijia',
        userImage: '',
        opinion : 'support'
    });

    new Comment('oppose-comment', {
        url: encodeURIComponent(fixUrl(window.location.href) + '&opinion=oppose'),
        articleId: 'x16a5clp',
        displayname: '',
        subscribename: 'baijia',
        userImage: '',
        opinion : 'oppose'
    });



});
</script>
