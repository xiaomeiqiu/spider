    <script type="text/javascript">
        function fixUrl(url){
            if(url.indexOf("&opinion=oppose") > 0){
                var idx = url.indexOf("&opinion=oppose");
                return url.substring(0,idx);
            }else if(url.indexOf("&opinion=support") > 0 ){
                var idx = url.indexOf("&opinion=support");
                return url.substring(0,idx);
            }else{
                return url ; 
            }
        }
    </script>
