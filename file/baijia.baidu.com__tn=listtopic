<script type="text/javascript">
   baidu.dom.ready(function(){

    //点击查看更多文章
    function renderItem(item){
        var _html = []  ;  
        _html.push( '<div class="past-list-item">',
                        '<a href="/?tn=topic&topicid='+item.ID+'" target="_blank"><img src="'+item.m_image_url+'"/></a>',
                        '<a href="/?tn=topic&topicid='+item.ID+'" class="title" target="_blank"><span class="item-num">'+item.m_title2+'</span><span class="item-title">'+item.m_title+'</span><span class="item-btn"></span></a>',
                    '</div>');
        return _html.join("");
    }

    var __more = baidu.g("more_article");
    var __list = baidu.g("past-list");
    var __moreId = 2 ; 
    __more && baidu.event.on(__more,'click',function(e){
        baidu.ajax.get("/ajax/topiclist?firstid=x16a5clp&pagesize=6&page="+__moreId,function(h,r){ 
            var req = baidu.json.parse(r);
            var html = "" ;
            if(req.errno == 0){
                for(var i = 0 ;i < req.data.list.length ;i++ ){
                    html += renderItem(req.data.list[i]);
                }
                baidu.dom.insertHTML(__list,'beforeEnd',html);
                if(__moreId * 6  > req.data.total ){
                    baidu.setStyle(__more,"display","none");
                }
                __moreId++ ; 
            }else{
                
            }
        });
    });

   });
</script>
